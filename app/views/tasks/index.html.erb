<table class="table table-striped table-condensed">
  <% @tasks.each do |task| %>
    <tr>
      <% if (task.due_date > Date.today) %>
        <td><%= check_box("tag", tag.id) %></td>
        <td><%= task.name%></td>
        <td><%= task.due_date%></td>
        <td><%= link_to 'note',task_path(task)%></td>
        <td><%= link_to 'edit',edit_task_path(task)%></td>
        <td><%= link_to 'delete',task_path(task), method: :delete, data:{confirm: 'Are you sure?'} %></td>
      <% else %>
        <td><font color="gray"><%= check_box("tag", tag.id) %></font></td>
        <td><font color="gray"><%= task.name%></font></td>
        <td><font color="gray"><%= task.due_date%></font></td>
        <td><font color="gray"><%= 'note'%></font></td>
        <td><font color="gray"><%= 'edit'%></font></td>
        <td><font color="gray"><%= 'delete'%></font></td>
      <%end%>
    </tr>
    <br>
  <% end%>
</table>
<%= link_to 'New Task', new_task_path %>
